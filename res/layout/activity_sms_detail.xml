<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/zaizai">

    <include layout="@layout/layout_title_bar" />

    <ListView
        android:id="@+id/listview_detail"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_title_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dip" >

        <EditText
            android:id="@+id/et_detail"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bg_send_edittext" />

        <Button
            android:id="@+id/btn_send_detail"
            android:layout_width="wrap_content"
            android:layout_height="32dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_btn_conversation"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/send" />
    </LinearLayout>

</LinearLayout>